    <!--对象注入-->
    <!--创建两个对象-->
    <bean id="dao" class="ioc.UserDao"></bean>
    <bean id="service" class="ioc.UserService">
        <!--不要写value，因为不是字符串，写bean标签中id的值-->
        <property name="userDao" ref="dao"></property>
    </bean>

    <!--名称空间注入-->
    <!--p冒号后面加上属性的值，后面加上value，用的不是很多-->
<!--    <bean id="person" class="property.Person" p:name="Lucy"></bean>-->

    <!--注入复杂类型的属性-->

    <bean id="person" class="property.Person">
        <!--1. 数组-->
         <property name="arrs">
             <list>
                 <value>"hello"</value>
                 <value>"world"</value>
                 <value>"array"</value>
             </list>
         </property>
        <!--2. list-->
        <property name="list">
            <list>
                <value>"pig"</value>
                <value>"cat"</value>
            </list>
        </property>
        <!--3. map-->
        <property name="map">
            <map>
                <entry key="aa" value="Lucy"></entry>
                <entry key="bb" value="Mary"></entry>
                <entry key="cc" value="Tom"></entry>
            </map>
        </property>
        <!--4. properties-->
        <property name="properties">
            <props>
                <prop key="driverClass">com.mysql.jdbc.Driver</prop>
                <prop key="userName">root</prop>
            </props>
        </property>
    </bean>

</beans>